<script
  src="https://code.jquery.com/jquery-3.2.1.js"
  integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE="
  crossorigin="anonymous"></script>

    <script type="text/javascript">

        $(document).ready(function(){
            $(".searchForm").on("submit", function(evt){
                evt.preventDefault();
                $.ajax({
                        url: "/process-search",
                        type: "POST",
                        data: $(this).serialize(),

                        success: function(data){
                        if(data.success){
                           console.log(data.success);
                           var result = data.success;
                        for(var i = 0; i<result.length; i++) {
                                //var doc = document.getElementById('list');
                                //$("#list").append("<li>" + result[i].first_name +", "+ result[i].last_name + "</li>");
$(".ctn").append("<div class='box'> <input type='checkbox' name='checkbox-'" +i+ "id='checkbox-'" +i+ "></br>" +
"  <img src='https://media.istockphoto.com/photos/closeup-of-mixedbreed-monkey-between-chimpanzee-and-bonobo-smiling-picture-id119838172?k=6&m=119838172&s=612x612&w=0&h=C6yKSGBkRi_85jnSv1aryQWKu08QKq6aLXWJGpHVd90='>" +
"<p>" +result[i].first_name +", "+ result[i].last_name +"</p></div>");
                        }
                        } else {
                            console.log("error");
                        }
                    },
                    error: function(){
                        console.log("There was a problem.");
                    }
                });
            });
        });

</script>
