<link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
 <title>edit</title>
 <style>
 body {
  /* background: url("img/cinema4.jpeg");*/
   background-repeat: no-repeat;
   background-size: cover;
   color: #fff;
 }
 .box {
   border: 1px solid black;
   background-color: #fff;
   color: black;
   box-shadow: 0px 10px 50px black;
   cursor: pointer;
   overflow-y: scroll;
 }
 hr {
   border: 1px solid grey;
 }
 label {
   font-size: 1em;
 }
 h3 {
 color:black;
}
 </style>
</head>
<body>
<div class="container ctn">
 <div class="row justify-content-center">
   <div class="box" style="width:100%;">
     <h3><i class="fa fa-cogs" aria-hidden="true"></i> Customize your App</h3>
     <hr>
 <form id="upload_font-image" enctype="multipart/form-data" action="upload_font-image" method="POST">
   <label for="photo">Background Image</label>
         <input type="file" name = "photo" class="form-control-file" require accept="image/*" id="photo">
 <br>
         <input type="submit" class="btn btn-success" value="Upload Image" id="photo_upload">
 </form>
     <form id="edit_elt" method="POST" action="edit_page" role="form">
       <div class="form-group">
         <label for="app_name">Name your App</label>
         <input type="text" name="app_name" class="form-control" placeholder="Name Me!" id="app_name">
       </div>
       <div class="form-group">
         <label for="app_intro">Introduce your App</label>
         <input type="text" name="app_intro" class="form-control" placeholder="Introduce Me!" id="app_intro">
       </div>
   <div class="form-group">
   <label for="app_about">About your App</label>
   <textarea name = "app_about" class="form-control" id="app_about" placeholder="About your App." rows="10"></textarea>
 </div>
    <!-- <div class="form-group">
         <label for="photo">Choose Font Picture</label>
         <input type="file" name = "photo" class="form-control-file" require accept="image/*" id="photo">
       </div> -->
         <button type="submit" class="btn btn-primary" id="edit_btn">Apply Changes</button>
     </form>
   </div>
 </div>
</div>
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script>
$(document).ready(function() {
 console.log("ready!");
 document.getElementById("edit_btn").disabled = true;
 var values = $("#edit_elt").val();
 $("#edit_elt input").change(function() {
   if (!values) {
     document.getElementById("edit_btn").disabled = false;
   } else {
     document.getElementById("edit_btn").disabled = true;
     }
 });
       document.getElementById("photo_upload").disabled = true;
       var values = $("#upload_font-image").val();
       $("#upload_font-image input").change(function() {
               if (!values) {
                       document.getElementById("photo_upload").disabled = false;
               } else {
                       document.getElementById("photo_upload").disabled = true;
                       }
       })

});
</script>
</body>
