<script src="https://code.jquery.com/jquery-2.0.2.min.js"></script>
<script type="text/javascript">
$(document).ready(function() {

  $('#password1').hover(function () {
     $('#password1').attr('type', 'text');
  }, function () {
     $('#password1').attr('type', 'password');
  });

  $('#login').on('submit', function(e) {
    e.preventDefault();
    $.ajax({
      type: 'post',
      url: '/login',
      data: $(this).serialize(),
      success: function(response) {
        if (response.success) {
          // console.log("able to login");
          location.assign("/user");
        }else{
          $("#password1").effect("shake");
          $("#message").html('Error! Email or Password Does Not Match Our Records. Try Again.');
          $('#login_message').html("<a href='/addUser'>**Click Here to Create Account**</a>");
        }
      }
    });
  });
});

</script>
<body>
  <center><h3>Log In</h3><br>
    <br>
  <div class="container b">
    <form action="/login"  method="POST" id="login">
      <div class="form-group col-md-4">
        <label for="email1">Email address</label>
        <input type="email" name ="email"class="form-control" id="email1" aria-describedby="emailHelp" placeholder="Enter email">
      </div>
      <div class="form-group col-md-4">
       <label for="password1">Password</label>
       <input type="password" name ="password" class="form-control" id="password1" placeholder="Password">
      </div>
      <a href="forgot">Forgot password?</a><br><br>

      <div class="form-group col-md-4">
        <input type="submit" class="btn primary" id="submit_btn" value="Login"> <br>
      </div>
      <div id="message" style='color:red; font-weight:bold;'></div>
      <span class="" id="login_message" style='color:blue; font-weight:bold;'></span>
  </form>
  <br>
  </div>
</body>
