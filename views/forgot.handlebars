<head>
  <title>Resetting Password</title>
</head>
<script src="https://code.jquery.com/jquery-2.0.2.min.js"></script>
<script type="text/javascript">
$(document).ready(function() {
  $('#submit_btn').hide();
  $('input').on('change', function() {
    var email = $('#email').val();
    if (email) {
      $.ajax({
        type: 'post',
        url: '/forgot_pwd_reset',
        data: {
        email:email,
      },
      success: function (response) {
        $('#email_status').html(response);
        if(response){
	  $('#submit_btn').hide();
          return false;
        }
        else {
       	  $('#submit_btn').show();
	  $('#submit_message').hide();
          return true;
        }
      }
    });
    }else {
      $('#email_status').html("");
      return false;
    }
  })
});

</script>
<body>
  <center><h3>Forgot Password</h3>
  <p>Enter your Email, then Click send to have the link sent. Then follow the instructions.</p>
  <div class="container b">
    <form action="/forgot"  method="POST">
      <div class="form-group col-md-4">
        <label for="email">Email:</label>
        <input type="email" class="form-control" id="email" name="email">
        <span class="" id="email_status" style='color:red; font-weight:bold;'></span>
      </div>

      <div class="form-group col-md-4">
        <input type="submit" class="btn primary" id="submit_btn" value="Send"> <br>
        <span class="" id="submit_message" style='color:red; font-weight:bold;'>**Enter Email Associated with Account**</span>
      </div>
  </form>
  <br>
  </div>
</body>


